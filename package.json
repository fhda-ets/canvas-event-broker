{
    "name": "canvas-event-broker",
    "version": "2.0.0",
    "description": "Brokers academic events between the Banner SIS and Canvas LMS. Also provides API services for the Canvas Site Manager UI",
    "author": "Matt Rapczynski <rapczynskimatthew@fhda.edu",
    "license": "BSD-3-Clause",
    "dependencies": {
        "async": "^2.0.1",
        "bluebird": "^3.4.6",
        "bluebird-chain": "^0.1.0",
        "case": "^1.4.1",
        "config": "^1.21.0",
        "es6-error": "^3.1.0",
        "express": "^4.14.0",
        "fhda-logging": "git+http://stash.ad.fhda.edu/scm/npmp/fhda-logging.git#3.3.0",
        "fs-jetpack": "^0.9.2",
        "oracledb": "^1.11.0",
        "pipep": "^0.1.1",
        "pm2": "^2.0.18",
        "random-gen": "^0.1.0",
        "random-item": "^1.0.0",
        "request": "^2.75.0",
        "request-promise": "^4.1.1",
        "socket.io": "^1.4.8",
        "socketio-jwt": "^4.5.0"
    },
    "devDependencies": {
        "docdash": "^0.4.0",
        "eslint": "^3.5.0",
        "jsdoc": "^3.4.2",
        "mocha": "^3.0.2",
        "mocha-bamboo-reporter": "^1.1.1",
        "mocha-better-spec-reporter": "^3.0.2",
        "mocha-eslint": "^3.0.1",
        "should": "^11.1.0"
    },
    "scripts": {
        "generate-docs": "rm -Rf docs && node_modules/.bin/jsdoc -c jsdoc.json",
        "pm2-kill": "node_modules/pm2/bin/pm2 kill",
        "pm2-start": "node_modules/pm2/bin/pm2 start --force --no-daemon --no-vizion --restart-delay 5000 src/Main.js",
        "pm2-status": "node_modules/pm2/bin/pm2 status --no-daemon",
        "pm2-stop": "node_modules/pm2/bin/pm2 stop --no-daemon Main",
        "start": "node src/Main.js",
        "test": "export NODE_APP_INSTANCE=mocha && node_modules/mocha/bin/mocha -R mocha-better-spec-reporter src/tests/Bootstrap.js src/tests/*Tests.js",
        "test-single": "export NODE_APP_INSTANCE=mocha && node_modules/mocha/bin/mocha -R mocha-better-spec-reporter src/tests/Bootstrap.js"
    }
}
